<section class="avatar-shop">
  <div class="section-header">
    <h2>아바타 상점</h2>
    <a href="/avatar-shop" class="more-link">더보기</a>
  </div>

  <div class="avatar-carousel">
    <button class="carousel-button prev">&#10094;</button>
    <div class="avatar-items">
      <% for (let i = 1; i <= 10; i++) { %>
        <%- include('./shop/avatar-item', {
        image: `/images/avatar_0088.jpg`,
        name: `아바타 ${i}`,
        price: '10,000',
        stock: '10,000'
        }) %>
      <% } %>
    </div>
    <button class="carousel-button next">&#10095;</button>
  </div>
</section>
