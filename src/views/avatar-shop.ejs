<!DOCTYPE html>
<html lang="ko">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/css/avatar-shop-page.css">

</head>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="shop-header">
      <h1>아바타 상점</h1>
<!--      <div class="filters">
        <button class="filter-button active">전체</button>
        <button class="filter-button">신규</button>
        <button class="filter-button">인기</button>
        <button class="filter-button">한정판</button>
      </div>-->
    </div>

    <div class="avatar-grid">
      <% avatars.forEach(avatar => { %>
        <%- include('partials/shop/avatar-item', {
        image: avatar.image,
        name: avatar.name,
        price: avatar.price,
        stock: avatar.stock
        }) %>
      <% }); %>

    </div>
  </div>

  <%- include('partials/footer') %>
  <script type="module" src="/js/avatar-shop.js"></script>
  <script type="module">
    import { initProfileModal } from '/js/profileModal.js';
    import { initCashChargeModal } from '/js/cash-charge-modal.js';

    document.addEventListener('DOMContentLoaded', () => {
      initProfileModal();
      initCashChargeModal();
    });
  </script>


</body>
</html>
